{
  "compilerOptions": {
    "target": "ES2018",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "allowJs": true,
    "outDir": "dist",
    "types": ["node"]
  },
  "include": ["./src/**/*"],
  "exclude": ["./bin/**/*", "./templates/**/*", "./dist/**/*"]
}
